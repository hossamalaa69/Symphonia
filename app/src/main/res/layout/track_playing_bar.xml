<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="@color/dark_gray"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_track_image_bar"
        android:layout_width="?android:actionBarSize"
        android:layout_height="?android:actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        tools:src="@drawable/images2" />


    <TextView

        android:id="@+id/tv_track_details_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_track_image_bar"
        android:layout_toRightOf="@id/iv_track_image_bar"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/semi_large_dimen"
        android:textColor="@android:color/white"
        tools:text="@string/play" />

    <ImageView
        android:id="@+id/iv_like_track_bar"
        android:layout_width="?android:actionBarSize"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_play_track_bar"
        android:padding="@dimen/semi_large_dimen"
        android:src="@drawable/ic_settings_black_24dp" />

    <ImageView
        android:id="@+id/iv_play_track_bar"
        android:layout_width="?android:actionBarSize"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/semi_large_dimen"
        android:src="@drawable/ic_play_arrow_black_24dp" />

</RelativeLayout>