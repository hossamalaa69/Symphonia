<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activities.User_Management.SignUp.SignUp1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/what_s_your_email"
        android:textColor="@color/colorWhite"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="34sp"
        app:autoSizeMaxTextSize="44sp"
        app:autoSizeStepGranularity="1sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_style"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_this_email"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/next"
        android:onClick="openNext"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_curved_gray"
        android:enabled="false"
        android:text="@string/next"
        android:textColor="@color/colorGradient2"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>