<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_list_filter"
    android:paddingLeft="12dp">

    <TextView
        android:id="@+id/tv_search_artists"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/See_all_artists"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_search_songs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/See_all_songs"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_search_playlists"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/See_all_playlists"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_search_albums"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/See_all_albums"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_search_genres"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/See_all_genres_and_modes"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_search_profiles"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/See_all_profiles"
        android:gravity="center_vertical"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>