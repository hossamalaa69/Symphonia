<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/are_you_sure"
        android:id="@+id/text_dialog"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="22sp"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeStepGranularity="2sp"
        android:textColor="@color/colorGradient2"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/text_dialog"
        android:text="@string/why_skip"
        android:id="@+id/text_dialog2"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeMaxTextSize="22sp"
        app:autoSizeStepGranularity="1sp"
        android:textColor="@color/colorGradient2"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        />

    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="@string/skip"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_skip"
        android:layout_below="@+id/text_dialog2"
        android:background="@drawable/btn_curved_green"
        android:layout_centerHorizontal="true"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeStepGranularity="2sp"
        android:textColor="@color/colorWhite" />

    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="@string/choose_artists"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_cont"
        android:layout_below="@+id/btn_skip"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_curved_gray"
        android:layout_centerHorizontal="true"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeStepGranularity="1sp"
        android:textColor="@color/colorWhite" />
</RelativeLayout>