<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_item_size"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_playlist_image_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_item_size"
        android:layout_margin="@dimen/medium_dimen"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_playlist_title_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sub_title_height"
        android:layout_below="@id/iv_playlist_image_home"
        android:layout_marginStart="@dimen/medium_dimen"
        android:layout_marginLeft="@dimen/medium_dimen"
        android:layout_marginTop="@dimen/small_dimen"
        android:layout_marginRight="@dimen/medium_dimen"
        android:autoSizePresetSizes="@array/autosize_text_sizes"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/body_size"
        tools:targetApi="o"
        tools:text="playlist name" />

    <TextView
        android:id="@+id/tv_playlist_description_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/body_2_height"
        android:layout_below="@id/tv_playlist_title_home"
        android:layout_marginStart="@dimen/medium_dimen"
        android:layout_marginLeft="@dimen/medium_dimen"
        android:autoSizePresetSizes="@array/autosize_text_sizes"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/body_size"
        tools:targetApi="o"
        tools:text="playlist description" />
</RelativeLayout>