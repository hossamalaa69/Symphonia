<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/medium_dimen">

    <ImageView
        android:id="@+id/iv_track_image_item"
        android:layout_width="@dimen/image_small_item_size"
        android:layout_height="@dimen/image_small_item_size"
        android:contentDescription="@string/track_image"
        android:scaleType="fitXY"
        tools:src="@drawable/download" />

    <TextView
        android:id="@+id/tv_track_title_item"
        style="@style/TitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_like_track_item"
        android:layout_toLeftOf="@id/iv_like_track_item"
        android:layout_toEndOf="@id/iv_track_image_item"
        android:layout_toRightOf="@id/iv_track_image_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/medium_dimen"
        android:textSize="@dimen/title_size"
        tools:text="Start Again" />

    <TextView
        android:id="@+id/tv_track_description_item"
        style="@style/textStyleItem"
        android:layout_below="@id/tv_track_title_item"
        android:layout_alignBottom="@id/iv_track_image_item"
        android:layout_toEndOf="@id/iv_track_image_item"
        android:layout_toRightOf="@id/iv_track_image_item"
        android:paddingStart="@dimen/medium_dimen"
        android:paddingLeft="@dimen/medium_dimen"
        android:paddingEnd="@dimen/medium_dimen"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/body_size"
        tools:text="khaled, mohamed, ali, youssef" />

    <ImageView
        android:id="@+id/iv_hide_track_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/iv_track_settings_item"
        android:layout_toLeftOf="@id/iv_track_settings_item"
        android:contentDescription="@string/track_image"
        android:padding="@dimen/medium_dimen"
        android:scaleType="fitXY"
        android:src="@drawable/ic_do_not_disturb_on_black_24dp" />

    <ImageView
        android:id="@+id/iv_like_track_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_hide_track_item"
        android:contentDescription="@string/track_image"
        android:padding="@dimen/medium_dimen"
        android:scaleType="fitXY"
        android:src="@drawable/ic_favorite_border_black_24dp" />

    <ImageView
        android:id="@+id/iv_track_settings_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/track_image"
        android:padding="@dimen/medium_dimen"
        android:scaleType="fitXY"
        android:src="@drawable/ic_more_vert_black_24dp" />

</RelativeLayout>