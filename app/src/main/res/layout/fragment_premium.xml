<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:background="@drawable/background4">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/try_premium"
            android:textColor="#FFFFFF"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="28sp"
            app:autoSizeMaxTextSize="38sp"
            app:autoSizeStepGranularity="2sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/enjoy_many_features"
            android:textColor="#FFFFFF"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="28sp"
            app:autoSizeMaxTextSize="34sp"
            app:autoSizeStepGranularity="2sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            >
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_premium"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:orientation="horizontal">
        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/get_premium"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_curved_white"
            android:text="@string/get_premium"
            android:textColor="@color/colorGradient2"
            android:fontFamily="sans-serif"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeStepGranularity="1sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t1"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_terms"
            android:textColor="@color/light_gray"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/colorGradient2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/background_gray"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/spotify_free"
                android:gravity="center_vertical"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeMaxTextSize="26sp"
                app:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white">
            </TextView>

            <TextView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:text="@string/current_plan"
                android:gravity="center_vertical"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeStepGranularity="1sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/light_gray">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>