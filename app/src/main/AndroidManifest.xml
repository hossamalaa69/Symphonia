            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.UserUI.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.ArtistRegister.EmailCheckArtistActivity"
            android:label="@string/check_email"
            android:parentActivityName=".Activities.ArtistRegister.ForgetPasswordArtistActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.UserUI.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.ListenerRegister.EmailCheckListenerActivity"
            android:label="@string/check_email"
            android:parentActivityName=".Activities.ListenerRegister.ForgetPasswordListenerActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
