            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.SignUp.SignUp1Activity" />
        </activity>
        <activity
            android:name=".Activities.SignUp.SignUp1Activity"
            android:label="@string/create_account"
            android:parentActivityName=".Activities.ListenerRegister.WelcomeListenerActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.ListenerRegister.WelcomeListenerActivity" />
        </activity>
        <activity
            android:name=".Activities.ArtistRegister.LoginArtistActivity"
            android:label=""
            android:parentActivityName=".Activities.ArtistRegister.WelcomeArtistActivity"
