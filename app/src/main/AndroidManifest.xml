        </activity>
        <activity
            android:name=".Activities.SignUp.SignUp5Activity"
            android:label="@string/create_account"
            android:parentActivityName=".Activities.SignUp.SignUp4Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.SignUp.SignUp4Activity" />
        </activity>
        <activity
            android:name=".Activities.SignUp.SignUp4Activity"
            android:label="@string/create_account"
            android:parentActivityName=".Activities.SignUp.SignUp3Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
